<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/systemGroupedBackground"
        android:paddingHorizontal="5dp"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="4dp">

                <com.hongslab.chating_memo.utils.KyhImageButton
                    android:id="@+id/btn_image_more"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:background="@color/systemGray5"
                    android:padding="4dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_dots_three_outline"
                    app:radius="10" />

                <TextView
                    android:id="@+id/tv_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:text="오후 11:00"
                    android:textColor="@color/systemGray"
                    android:textSize="10sp" />
            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/image_container"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/label"
                app:strokeWidth="0px">

                <!-- 패턴 1: 1장 -->
                <ImageView
                    android:id="@+id/layout_single"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <!-- 패턴 2: 2장 (가로 2개) -->
                <LinearLayout
                    android:id="@+id/layout_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/image_two_1"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_marginEnd="1dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/image_two_2"
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop" />
                </LinearLayout>

                <!-- 패턴 3: 3장 (큰거 1개 + 작은거 2개) -->
                <LinearLayout
                    android:id="@+id/layout_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/image_three_1"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="1dp"
                        android:layout_weight="2"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image_three_2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="1dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/image_three_3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 패턴 4: 4장 (2x2 그리드) -->
                <LinearLayout
                    android:id="@+id/layout_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_four_1"
                            android:layout_width="0dp"
                            android:layout_height="125dp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/image_four_2"
                            android:layout_width="0dp"
                            android:layout_height="125dp"
                            android:layout_marginBottom="1dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_four_3"
                            android:layout_width="0dp"
                            android:layout_height="125dp"
                            android:layout_marginEnd="1dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/image_four_4"
                            android:layout_width="0dp"
                            android:layout_height="125dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 패턴 5: 5장 (큰거 1개 + 작은거 4개) -->
                <LinearLayout
                    android:id="@+id/layout_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/image_five_1"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginBottom="1dp"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_five_2"
                            android:layout_width="0dp"
                            android:layout_height="75dp"
                            android:layout_marginEnd="1dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/image_five_3"
                            android:layout_width="0dp"
                            android:layout_height="75dp"
                            android:layout_marginEnd="1dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/image_five_4"
                            android:layout_width="0dp"
                            android:layout_height="75dp"
                            android:layout_marginEnd="1dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/image_five_5"
                            android:layout_width="0dp"
                            android:layout_height="75dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 패턴 6: 6장 (3x2 그리드) -->
                <LinearLayout
                    android:id="@+id/layout_six"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_six_1"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/image_six_2"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="1dp"
                            android:layout_marginBottom="1dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/image_six_3"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_marginBottom="1dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_six_4"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="1dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/image_six_5"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="1dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/image_six_6"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 패턴 7-10: 더 많은 이미지용 (간단하게 그리드) -->
                <androidx.gridlayout.widget.GridLayout
                    android:id="@+id/layout_many"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:columnCount="3">

                    <ImageView
                        android:id="@+id/image_many_1"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="0.5dp"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        app:layout_columnWeight="1" />

                    <ImageView
                        android:id="@+id/image_many_2"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="0.5dp"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        app:layout_columnWeight="1" />

                    <ImageView
                        android:id="@+id/image_many_3"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="0.5dp"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        app:layout_columnWeight="1" />

                    <ImageView
                        android:id="@+id/image_many_4"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="0.5dp"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        app:layout_columnWeight="1" />

                    <ImageView
                        android:id="@+id/image_many_5"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="0.5dp"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        app:layout_columnWeight="1" />

                    <ImageView
                        android:id="@+id/image_many_6"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="0.5dp"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        app:layout_columnWeight="1" />

                    <ImageView
                        android:id="@+id/image_many_7"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="0.5dp"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        app:layout_columnWeight="1" />

                    <ImageView
                        android:id="@+id/image_many_8"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="0.5dp"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        app:layout_columnWeight="1" />

                    <ImageView
                        android:id="@+id/image_many_9"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="0.5dp"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        app:layout_columnWeight="1" />

                    <ImageView
                        android:id="@+id/image_many_10"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_margin="0.5dp"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        app:layout_columnWeight="1" />

                </androidx.gridlayout.widget.GridLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </FrameLayout>
</layout>