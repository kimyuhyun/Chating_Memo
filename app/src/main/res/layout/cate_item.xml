<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="click"
            type="View.OnClickListener" />


        <variable
            name="model"
            type="com.hongslab.chating_memo.models.CateVO" />

    </data>

    <LinearLayout
        android:id="@+id/ll_box"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/secondarySystemGroupedBackground"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:gravity="center_vertical"
        android:onClick="@{click::onClick}"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp"
            app:setCardBackgroundColor="@{model.color}"
            app:strokeColor="@color/systemGray"
            app:strokeWidth="1dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{model.name1, default=`분류`}"
            android:textColor="@color/label"
            android:textSize="16sp" />

        <com.hongslab.chating_memo.utils.KyhImageButton
            android:id="@+id/btn_more_action"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:onClick="@{click::onClick}"
            android:scaleType="center"
            android:src="@drawable/ic_dots_three_vertical"
            app:tint="@color/label" />

    </LinearLayout>
</layout>