<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="click"
            type="View.OnClickListener" />

        <variable
            name="model"
            type="com.hongslab.chating_memo.models.ChatRoomVO" />

    </data>

    <LinearLayout
        android:id="@+id/ll_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondarySystemGroupedBackground"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:gravity="center_vertical"
        android:onClick="@{click::onClick}"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="99dp"
                app:cardElevation="0dp"
                app:setCardBackgroundColor="@{model.color}"
                app:strokeColor="@color/systemGray"
                app:strokeWidth="2px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="2dp"
                    android:text="@{model.cateName, default=`장보기`}"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                app:isCompletedText="@{model}"
                android:text="메시지 입니다."
                android:textColor="@color/label"
                android:textSize="16sp" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.getDiffDate, default=`어제`}"
            android:textColor="@color/systemGray"
            android:textSize="12sp" />


    </LinearLayout>
</layout>