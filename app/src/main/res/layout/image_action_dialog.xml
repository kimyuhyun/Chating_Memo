<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="click"
            type="View.OnClickListener" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            app:cardBackgroundColor="@color/tertiarySystemBackground"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="0dp">


                <com.hongslab.chating_memo.utils.KyhTextButton
                    android:id="@+id/btn_delete"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:onClick="@{click::onClick}"
                    android:paddingHorizontal="20dp"
                    android:text="삭제"
                    android:textColor="@color/systemRed"
                    android:textSize="16sp"
                    app:radius="0" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="0dp"
                    android:background="@color/systemGray3" />


                <TextView
                    android:id="@+id/btn_close"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:onClick="@{click::onClick}"
                    android:text="닫기"
                    android:textColor="@color/systemBlue"
                    android:textSize="16sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</layout>

